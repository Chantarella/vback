extends layout


block content
    link(rel='stylesheet', href='../css/login-form.css')

    .wrap
        | Войти
        form(method='post', action='/login')
            div.error.text-warning= message

            input#username(type='text', placeholder='Email...', name='email')

            input#password(type='password', placeholder='******', name='password')

            .text-center.social
                p.sign_up
                    a(href='signup') Регистрация
                | Авторизоваться через социальные сети
                .social-links
                    i.fa.fa-vk(title='vk')

                    i.fa.fa-google-plus(title='Google+')

                    i.fa.fa-facebook-official(title='Facebook')

                    i.fa.fa-github(title='GitHub')

                button.btn.btn-lg(type='submit')
                    i.fa.fa-sign-in Войти

